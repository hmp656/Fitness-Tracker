<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CaloricReq">

    <TextView
        android:id="@+id/gender_label"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_x="0dp"
        android:layout_y="50dp"
        android:padding="10dp"
        android:text="Gender:"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/Gender"
        android:layout_width="305dp"
        android:layout_height="45dp"
        android:layout_x="105dp"
        android:layout_y="50dp" />

    <TextView
        android:id="@+id/age_label"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_x="0dp"
        android:layout_y="100dp"
        android:padding="10dp"
        android:text="Age:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/age_text_enter"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textSize="20sp"
        android:layout_y="100dp"
        android:layout_x="105dp"
        android:inputType="number"
        android:textAlignment="center"
        android:maxLength="3"
        android:hint="age in years"/>

    <TextView
        android:id="@+id/WeightLabel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="250dp"
        android:layout_y="200dp"
        android:paddingBottom="5dp"
        android:text="Choose Weight in Kilograms"
        android:textAlignment="center"
        android:textSize="15sp" />

    <NumberPicker
        android:id="@+id/WeightPicker"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_x="250dp"
        android:layout_y="250dp" />

    <TextView
        android:id="@+id/HeightLabel"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="200dp"
        android:paddingBottom="5dp"
        android:text="Choose Height in Centimeters"
        android:textAlignment="center"
        android:textSize="15sp" />

    <NumberPicker
        android:id="@+id/HeightPicker"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_x="10dp"
        android:layout_y="250dp" />

    <Button
        android:id="@+id/EnterValues"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="100dp"
        android:layout_x="250dp"
        android:layout_y="430dp"
        android:onClick="CaloricReqCalc"
        android:text="Calculate" />

    <TextView
        android:id="@+id/activity_label"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_x="0dp"
        android:layout_y="500dp"
        android:padding="10dp"
        android:text="Activity Level:"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/Activity_Level"
        android:layout_width="245dp"
        android:layout_height="45dp"
        android:layout_x="155dp"
        android:layout_y="500dp" />

    <TextView
        android:id="@+id/CalValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="550dp"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:text="Your caloric requirement shows up here"
        android:textAlignment="center"
        android:textSize="20sp" />


</AbsoluteLayout>